<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dp" />

            <gradient
                android:angle="270"
                android:endColor="@color/list_even"
                android:startColor="@color/list_even" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dp" />

                <gradient
                    android:angle="0"
                    android:endColor="@color/coop_button_color"
                    android:startColor="@color/coop_button_color" />
            </shape>
        </clip>
    </item>

</layer-list>