<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- <include -->
        <!-- android:id="@+id/title" -->
        <!-- layout="@layout/view_actionbar_title" /> -->

        <TextView
            android:id="@+id/lblHeadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_usual_margin"
            android:gravity="left"
            android:textColor="@color/text_body"
            android:textSize="@dimen/font_size_normal"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_usual_margin"
            android:layout_marginRight="@dimen/margin_ten_px"
            android:layout_marginTop="@dimen/margin_ten_px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/receiver_name"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/font_size_normal" />

            <EditText
                android:id="@+id/txtReceiversName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:inputType="textPersonName"
                android:padding="@dimen/margin_ten_px"
                android:textColor="@color/text_body"
                android:textSize="@dimen/font_size_normal" />
        </LinearLayout>

        <include layout="@drawable/seperator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_usual_margin"
            android:layout_marginRight="@dimen/margin_ten_px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/account_number"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/font_size_normal" />

            <EditText
                android:id="@+id/txtAccountNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:inputType="number"
                android:maxLength="11"
                android:padding="@dimen/margin_ten_px"
                android:textColor="@color/text_body"
                android:textSize="@dimen/font_size_normal" />
        </LinearLayout>

        <include layout="@drawable/seperator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_usual_margin"
            android:layout_marginRight="@dimen/margin_ten_px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/amount"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/font_size_normal" />

            <EditText
                android:id="@+id/txtAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:inputType="number"
                android:padding="@dimen/margin_ten_px"
                android:textColor="@color/text_body"
                android:textSize="@dimen/font_size_normal" />
        </LinearLayout>

        <include layout="@drawable/seperator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_usual_margin"
            android:layout_marginRight="@dimen/margin_ten_px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/message_or_kid"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/font_size_normal" />

            <EditText
                android:id="@+id/txtMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:inputType="text"
                android:padding="@dimen/margin_ten_px"
                android:textColor="@color/text_body"
                android:textSize="@dimen/font_size_normal" />
        </LinearLayout>

        <include layout="@drawable/seperator" />

        <Button
            android:id="@+id/btnFundsTransfer"
            style="@style/Theme.Coopmedlem.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/view_usual_margin"
            android:text="@string/transfer_funds"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>

</ScrollView>