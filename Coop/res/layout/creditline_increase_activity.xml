    <include layout="@drawable/seperator" />

    <LinearLayout
        android:id="@+id/linearOccupancy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_ten_px"
        android:layout_marginRight="@dimen/margin_ten_px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblOccupancyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/mortgage"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/font_size_normal" />

        <EditText
            android:id="@+id/txtMortgage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:inputType="number"
            android:padding="@dimen/margin_ten_px"
            android:textColor="@color/text_heading"
            android:textSize="@dimen/font_size_normal" >
        </EditText>
    </LinearLayout>

    <include layout="@drawable/seperator" />

    <LinearLayout
        android:id="@+id/linearOtherLoans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_ten_px"
        android:layout_marginRight="@dimen/margin_ten_px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblOtherLoansTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/other_loans"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/font_size_normal" />

        <EditText
            android:id="@+id/txtOtherLoans"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:inputType="number"
            android:padding="@dimen/margin_ten_px"
            android:textColor="@color/text_heading"
            android:textSize="@dimen/font_size_normal" >
        </EditText>
    </LinearLayout>

    <include layout="@drawable/seperator" />

    <LinearLayout
        android:id="@+id/linearEmployment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_ten_px"
        android:layout_marginRight="@dimen/margin_ten_px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblEmploymentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/employment"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/lblEmploymentType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:padding="@dimen/margin_ten_px"
            android:maxLines="1"
            android:text="None"
            android:ellipsize="end"
            android:textColor="@color/text_body"
            android:textSize="@dimen/font_size_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:layout_margin="@dimen/margin_five_px"
            android:gravity="right"
            android:src="@drawable/ic_action_next_item" />
    </LinearLayout>

    <include layout="@drawable/seperator" />

    <Button
        android:id="@+id/btnApplyCLI"
        style="@style/Theme.Coopmedlem.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_fifteen_px"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/btn_apply_credit_line_increase"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size_normal" />

</LinearLayout>