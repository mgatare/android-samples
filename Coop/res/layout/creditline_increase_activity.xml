<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytCLIContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_five_px"
        android:layout_marginLeft="@dimen/margin_ten_px"
        android:layout_marginTop="@dimen/margin_ten_px"
        android:text="@string/desired_increase_in_credit"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/font_size_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_ten_px"
        android:layout_marginLeft="@dimen/margin_ten_px"
        android:layout_marginRight="@dimen/margin_ten_px"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/lblCreditAmountApplied"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:textColor="@color/text_body"
            android:textSize="@dimen/font_currency"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnPlusCreditLimit"
                android:layout_width="@dimen/button_plus_width"
                android:layout_height="@dimen/button_plus_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="@string/sign_plus"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnSubstractCreditLimit"
                android:layout_width="@dimen/button_plus_width"
                android:layout_height="@dimen/button_plus_height"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btnPlusCreditLimit"
                android:text="@string/sign_minus"
                android:textColor="#000000"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

    <include layout="@drawable/seperator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_ten_px"
        android:layout_marginRight="@dimen/margin_ten_px"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/yearly_income"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/font_size_normal" />

        <EditText
            android:id="@+id/txtYearlyIncome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:inputType="number"
            android:padding="@dimen/margin_ten_px"
            android:textColor="@color/text_heading"
            android:textSize="@dimen/font_size_normal" >
        </EditText>
    </LinearLayout>

