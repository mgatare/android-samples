<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_five_px"
    tools:context="com.entercard.coop.EnterPinActivity_old"
    tools:ignore="MergeRootFrame" >

    <!-- <include -->
    <!-- android:id="@+id/layoutTitle" -->
    <!-- android:layout_centerInParent="true" -->
    <!-- layout="@layout/view_actionbar_title" /> -->

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin_top"
        android:gravity="center"
        android:textSize="@dimen/activate_font_size" />

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/headerTextView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="70dp"
        android:contentDescription="@null"
        android:src="@drawable/uilock" />

    <TextView
        android:id="@+id/bodytextTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgIcon"
        android:layout_marginTop="@dimen/margin_ten_px"
        android:gravity="center"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/title_screen_font_size" />

    <Button
        android:id="@+id/btnOk"
        style="@style/Theme.Entercardcoop.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_screen_font_size" />

</RelativeLayout>