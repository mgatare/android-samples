<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:weightSum="1" >

    <TextView
        android:id="@+id/lblEmploymentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_fifteen_px"
        android:layout_weight="1"
        android:gravity="left"
        android:padding="@dimen/margin_ten_px"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/font_size_normal" />

    <ImageView
        android:id="@+id/imgTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_five_px"
        android:background="@drawable/ic_action_accept"
        android:contentDescription="@null"
        android:visibility="gone" />

</LinearLayout>